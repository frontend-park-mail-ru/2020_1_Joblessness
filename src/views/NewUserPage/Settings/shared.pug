mixin input-field-settings
    div.input-field-auth-holder.settings-input(id=attributes.id)
        input.fancy-input.no-indent(
            class=attributes.class
            style=attributes.style
            autofocus!=attributes.autofocus
            readonly!=attributes.readonly
            type=attributes.type || "text"
            placeholder=attributes.placeholder
            value=attributes.value)
        block
        div.input-field-auth-holder--line
        div.form-input-err

mixin settings-block
    div.settings-holder--title
        h1 #{attributes.title}
    div.settings-holder--holder
        div.settings-holder--body
            block

mixin settings-item(name)
    div.settings-holder-item
        div.settings-holder-item--header
            h2 #{name}
        div.settings-holder-item--input
            +input-field-settings(id=attributes.id readonly=attributes.readonly)