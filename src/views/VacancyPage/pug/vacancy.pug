mixin salary(income)
    - let from, to;
    - if(typeof income === 'string') [from, to] = income.split('-')
    - else [from, to] = ['', '']
    p
        |Зарабатная плата от&nbsp
        b #{from}&nbsp
        |до&nbsp
        b #{to} руб
mixin vacancy
    div.vacancy-holder
        h1 #{attributes.name}
        p Описание: #{attributes.description}
        p Требуемые навыки: #{attributes.skills}
        +salary(attributes.salary)
        p Адрес офиса: #{attributes.address}
        p Телефон для связи: #{attributes.phone}
        block